<% if flash[:notice] %>
  <P><%= flash[:notice] %></p>
<% end %>
<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post_path(post) %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規投稿', new_post_path %>